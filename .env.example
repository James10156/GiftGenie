# OpenAI API Key - Get yours at https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"

# Database URL - Default to in-memory SQLite for local development
DATABASE_URL="file:./dev.db"

# Optional: Set to 'production' in production environment
NODE_ENV="development"

# Image APIs - For better product images (optional)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
PEXELS_API_KEY="your-pexels-api-key"

# Amazon Product Advertising API - For affiliate links (optional)
AMAZON_ACCESS_KEY="your-access-key"
AMAZON_SECRET_KEY="your-secret-key"
AMAZON_PARTNER_TAG="your-partner-tag"

# Cloudinary API (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Server settings
PORT=5000
SESSION_SECRET="your-session-secret"
